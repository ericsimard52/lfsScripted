function installPass1 {
    processCmd "make install"
    if [[ $? > 0 ]]; then
        log "PKG|ERROR|Error install pass 1" t
        return 1
    fi
    return 0
}

function installPass2 {
    processCmd "make install"
    if [[ $? > 0 ]]; then
        log "PKG|ERROR|Error install pass 2" t
        return 1
    fi

    log "PKG|INFO|Linking gcc to /tools/bin/cc" t
    processCmd "ln -sv gcc /tools/bin/cc"
    if [[ $? > 0 ]]; then
        log "PKG|ERROR|Error in linking." t
        return 1
    fi
    return 0
}

promptUser "Which pass [1,2]"
read pass
case $pass in
    1)
        installPass1
        if [[ $? > 0 ]]; then
            log "PKG|ERROR|Error withing install source scripts." t
            return 1
        fi
        ;;
    2)
        installPass2
        if [[ $? > 0 ]]; then
            log "PKG|ERROR|Error withing install source scripts." t
            return 1
        fi
        ;;
    *)
        log "PKG|ERROR|Invalid option."
        return 1
        ;;
esac

return 0
