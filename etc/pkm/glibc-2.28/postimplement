log "INFO:  Install the configuration file and runtime directory for nscd." true
eval "cp -v ../nscd/nscd.conf /etc/nscd.conf"
if [[ $? > 0 ]]; then
    return 1
fi
eval "mkdir -pv /var/cache/nscd"
if [[ $? > 0 ]]; then
    return 2
fi

log "INFO: install the locales that can make the system respond in a different language." true
eval "mkdir -pv /usr/lib/locale"
eval "localedef -i cs_CZ -f UTF-8 cs_CZ.UTF-8"
eval "localedef -i de_DE -f ISO-8859-1 de_DE"
eval "localedef -i de_DE@euro -f ISO-8859-15 de_DE@euro"
eval "localedef -i de_DE -f UTF-8 de_DE.UTF-8"
eval "localedef -i en_GB -f UTF-8 en_GB.UTF-8"
eval "localedef -i en_HK -f ISO-8859-1 en_HK"
eval "localedef -i en_PH -f ISO-8859-1 en_PH"
eval "localedef -i en_US -f ISO-8859-1 en_US"
eval "localedef -i en_US -f UTF-8 en_US.UTF-8"
eval "localedef -i es_MX -f ISO-8859-1 es_MX"
eval "localedef -i fa_IR -f UTF-8 fa_IR"
eval "localedef -i fr_FR -f ISO-8859-1 fr_FR"
eval "localedef -i fr_FR@euro -f ISO-8859-15 fr_FR@euro"
eval "localedef -i fr_FR -f UTF-8 fr_FR.UTF-8"
eval "localedef -i it_IT -f ISO-8859-1 it_IT"
eval "localedef -i it_IT -f UTF-8 it_IT.UTF-8"
eval "localedef -i ja_JP -f EUC-JP ja_JP"
eval "localedef -i ru_RU -f KOI8-R ru_RU.KOI8-R"
eval "localedef -i ru_RU -f UTF-8 ru_RU.UTF-8"
eval "localedef -i tr_TR -f UTF-8 tr_TR.UTF-8"
eval "localedef -i zh_CN -f GB18030 zh_CN.GB18030"
if [[ $? > 0 ]]; then
    return 3
fi

log "INFO: Adding nsswitch.conf" true

eval "cat > /etc/nsswitch.conf << \"EOF\"
# Begin /etc/nsswitch.conf

passwd: files
group: files
shadow: files

hosts: files dns
networks: files

protocols: files
services: files
ethers: files
rpc: files

# End /etc/nsswitch.conf
EOF"

if [[ $? > 0 ]]; then
    return 4
fi

log "INFO: Adding time zone data" true

tar -xf ../../tzdata2018e.tar.gz
ZONEINFO=/usr/share/zoneinfo
mkdir -pv $ZONEINFO/{posix,right}
for tz in etcetera southamerica northamerica europe africa antarctica  \
          asia australasia backward pacificnew systemv; do
    zic -L /dev/null   -d $ZONEINFO       -y "sh yearistype.sh" ${tz}
    zic -L /dev/null   -d $ZONEINFO/posix -y "sh yearistype.sh" ${tz}
    zic -L leapseconds -d $ZONEINFO/right -y "sh yearistype.sh" ${tz}
done
cp -v zone.tab zone1970.tab iso3166.tab $ZONEINFO
zic -d $ZONEINFO -p America/New_York
unset ZONEINFO

log "INFO: Determining time zone" t
tzselect

promptUser "Enter timezone: "
read t
eval "cp -v /usr/share/zoneinfo/$t /etc/localtime"
if [[ $? > 0 ]]; then
    return 7
fi

log "INFO: Configuring dynamic loader." t
eval "cat > /etc/ld.so.conf << \"EOF\"
# Begin /etc/ld.so.conf
/usr/local/lib
/opt/lib

EOF"

if [[ $? > 0 ]]; then
    return 8
fi

eval "cat >> /etc/ld.so.conf << \"EOF\"
# Add an include directory
include /etc/ld.so.conf.d/*.conf

EOF
"

if [[ $? > 0 ]]; then
    return 9
fi
eval "mkdir -pv /etc/ld.so.conf.d"

if [[ $? > 0 ]]; then
    return 10
fi


