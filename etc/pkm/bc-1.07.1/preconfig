cat > bc/fix-libmath_h << "EOF"
#! /bin/bash
sed -e '1   s/^/{"/' \
    -e     's/$/",/' \
    -e '2,$ s/^/"/'  \
    -e   '$ d'       \
    -i libmath.h

sed -e '$ s/$/0}/' \
    -i libmath.h
EOF

eval "ln -sv /tools/lib/libncursesw.so.6 /usr/lib/libncursesw.so.6"
if [[ $? > 0 ]]; then
    return 1
fi

eval "ln -sfv libncurses.so.6 /usr/lib/libncurses.so"
if [[ $? > 0 ]]; then
    return 2
fi

eval "sed -i -e '/flex/s/as_fn_error/: ;; # &/' configure"
if [[ $? > 0 ]]; then
    return 2
fi

