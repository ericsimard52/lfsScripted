function pass2 {
    make install
    if [[ $? > 0 ]]; then
        return 1
    fi
}
function pass1 {
    make install
    if [[ $? > 0 ]]; then
        return 1
    fi
}

function installStdc {
    eval "make install"
    if [[ $? > 0 ]]; then
        return 1
    fi
}

promptUser "Which pass are we running? 1, 2, [L]ibstdc++"
read u
case $u in
    1)
        pass1
        ;;
    2)
        pass2
        ;;
    [Ll])
        installStdc
        ;;
esac
