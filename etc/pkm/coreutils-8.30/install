make DESTDIR=$FAKEROOT/$sdn install
install -vdm755 $FAKEROOT/$sdn/bin
mv -v $FAKEROOT/$sdn/usr/bin/{cat,chgrp,chmod,chown,cp,date,dd,df,echo} $FAKEROOT/$sdn/bin
mv -v $FAKEROOT/$sdn/usr/bin/{false,ln,ls,mkdir,mknod,mv,pwd,rm} $FAKEROOT/$sdn/bin
mv -v $FAKEROOT/$sdn/usr/bin/{rmdir,stty,sync,true,uname} $FAKEROOT/$sdn/bin
mv -v $FAKEROOT/$sdn/usr/bin/chroot $FAKEROOT/$sdn/usr/sbin
install -vdm755 $FAKEROOT/$sdn/usr/share/man/man8
mv -v $FAKEROOT/$sdn/usr/share/man/man1/chroot.1 $FAKEROOT/$sdn/usr/share/man/man8/chroot.8
sed -i s/\"1\"/\"8\"/1 $FAKEROOT/$sdn/usr/share/man/man8/chroot.8
mv -v $FAKEROOT/$sdn/usr/bin/{head,sleep,nice} $FAKEROOT/$sdn/bin
  